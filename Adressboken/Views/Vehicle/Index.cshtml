@model Adressboken.Models.VehicleSearchViewModel

<h2>Search for Vehicle Details</h2>

@using (Html.BeginForm("Search", "Vehicle", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.RegistrationNumber)
        @Html.TextBoxFor(m => m.RegistrationNumber, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
}

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger mt-3">
        @ViewBag.ErrorMessage
    </div>
}




