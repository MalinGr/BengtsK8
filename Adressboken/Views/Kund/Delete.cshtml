@model Kund
@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Address - Adressboken</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
    <link rel="stylesheet" href="~/Adressboken.styles.css" asp-append-version="true">

    <style>
        /* Container styling */
        .content-container {
            max-width: 500px;
            margin: 50px auto;
            padding: 20px;
            background-color: #f8f9fa;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }

        /* Button styling */
        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }

        .btn-danger:hover {
            background-color: #b02a37;
            border-color: #b02a37;
        }

        /* Link styling */
        .btn-cancel {
            color: #6c757d;
            text-decoration: none;
            border: 1px solid #6c757d;
            border-radius: 5px;
            padding: 5px 10px;
            transition: background-color 0.3s, color 0.3s;
        }

        .btn-cancel:hover {
            background-color: #6c757d;
            color: #fff;
        }

        /* Text styling */
        .details {
            font-size: 18px;
            margin-bottom: 10px;
        }

        .label {
            font-weight: bold;
        }
    </style>
</head>
<body>
    <header>
        <!-- Navbar content from _Layout.cshtml -->
    </header>
    <div class="content-container">
        <h1 class="text-center">Delete Address</h1>

        <div>
            <h4 class="text-center">Are you sure you want to delete this address?</h4>
            <div class="details">
                <p><span class="label">Namn:</span> @Model.Namn</p>
                <p><span class="label">Adress:</span> @Model.Adress</p>
                <p><span class="label">Telefonnummer:</span> @Model.Telefonnummer</p>
                <p><span class="label">Email:</span> @Model.Email</p>
                <p><span class="label">Bilmodell:</span> @Model.Bilmodell</p>
                <p><span class="label">Årsmodell:</span> @Model.Årsmodell</p>
            </div>
            <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
                <button type="submit" class="btn btn-danger btn-block">Delete</button>
                <a asp-action="Index" class="btn-cancel text-center">Cancel</a>
            </form>
        </div>
    </div>
    <footer>
        <!-- Your footer content here -->
    </footer>
</body>
</html>
