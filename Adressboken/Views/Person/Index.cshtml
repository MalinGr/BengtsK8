@model List<Person>

<h1>Telefonbok</h1>

<p>
    <a asp-action="Create">Add New Address</a>
</p>

<table class="table">
    <thead>
    <tr>
        <th>Förnamn</th>
        <th>Efternamn</th>
        <th>Adress</th>
        <th>Telefonnummer</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var address in Model)
    {
        <tr>
            <td>@address.Förnamn</td>
            <td>@address.Efternamn</td>
            <td>@address.Adress</td>
            <td>@address.Telefonnummer</td>
            <td>
                <a asp-action="Edit" asp-route-id="@address.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@address.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>