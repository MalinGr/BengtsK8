@model Adressboken.Models.LoginViewModel

<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .login-container {
            max-width: 400px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }
        .form-group {
            margin-bottom: 15px;
        }
        label {
            font-weight: bold;
        }
        .btn-custom {
            background-color: #6c757d; /* Gray color for the buttons */
            color: #fff;
            border: none;
            width: 100%; /* Make the button full width */
            margin-top: 10px; /* Adjust margin as needed */
        }
        .btn-custom:hover {
            background-color: #5a6268; /* Darken the color on hover */
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="login-container">
            <h2 class="text-center">Login</h2>
            <form asp-action="Login" asp-controller="Account" method="post" asp-antiforgery="true">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Username">Användare:</label>
                    <input type="text" id="Username" asp-for="Username" class="form-control" required />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password">Lösenord:</label>
                    <input type="password" id="Password" asp-for="Password" class="form-control" required />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-custom btn-block">Login</button>
            </form>
        </div>
        <div class="login-container">
            <a href="@Url.Action("CognitoLogin", "Account")" class="btn btn-custom">Logga in med Cognito</a>
        </div>
    </div>
</body>
</html>



